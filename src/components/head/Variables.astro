---
/**
 * CSS variables for styling downstream content.
 */
export const fonts = {
  display: "Patua One, Lucida Bright, serif",
  hero: "Patua One, Lucida Bright, serif",
  heroSubtitle: '"Work Sans", sans-serif',
  subtitle: "Patua One, Lucida Bright, sans-serif",
  reading: '"Work Sans", sans-serif',
  code: "monaco, Consolas, Andale Mono, Lucida Console, monospace",
};

/** 
$svgDefaultColor: #38332a;
$svgAlternateColor: #faf9f9;
$accent1DefaultColor: #d85d44;
$accent2DefaultColor: #3a89c9;
$accent3DefaultColor: #9665c7;
$accent4DefaultColor: #fbd136;

// overridde bulma colors, this is to have it default to the light theme
$black: #100b03; // `icons` default body font, largely unused except for icons
$black-bis: #18130d; // `titleText` title, subtitle, h1
$black-ter: $svgDefaultColor; // `subtitleText` h2
$grey-darker: #3f3b35; // `text` main text color, h3-6
$grey-dark: #5e564b; // unused
$grey: #8f8980; // unused
$grey-light: #bab6af; // unused
$grey-lighter: #dcdbd9; // `backgroundAccent` used by <hr> + footer border
$white-ter: #f0efef; // unused
$white-bis: #f5f4f4; // unused
$white: #faf9f9; // `background`

// bulma-required colors
$orange: #d85d44;
$yellow: #fbd136;
$green: #23d160;
$turquoise: #8cc9bf;
$blue: #3a89c9;
$purple: #9665c7; // `code` inline code segments
$red: #d34141;
*/
---

<style is:global>
  html {
    /** COLORS */

    /** Main background color of the site. */
    --backgroundColor: #faf9f9;
    /** Slightly off-shade of the same background color. */
    --backgroundAccentColor: #dcdbd9;
    /**
     * Background for elements that don't share the common background
     * color. Normally contrasting.
     */
    --secondaryBackgroundColor: #2a363b;
    /** h1-2 */
    --titleTextColor: #100b03;
    /** h3-6 */
    --subtitleTextColor: #38332a;
    /** Main body text. */
    --textColor: #3f3b35;
    /** Fun colors, clicked links, etc. */
    /** Links, warnings, admonitions. */
    --accent1Color: #d85d44;
    /** Hovered links, hovered icons. */
    --accent2Color: #3a89c9;
    /** Inline code. */
    --accent3Color: #9665c7;
    /** Warnings. */
    --accent4Color: #fbd136;
    /** SVG illustrations stroke color. */
    --illustrationsColor: #3f3b35;

    /** FONTS */
    --displayFonts: "Patua One", "Lucida Bright", serif;
    --heroFonts: "Patua One", "Lucida Bright", serif;
    --heroSubtitleFonts: "Work Sans", sans-serif;
    --subtitleFonts: "Patua One", "Lucida Bright", sans-serif;
    --readingFonts: "Work Sans", sans-serif;
    --codeFonts: monaco, Consolas, "Andale Mono", "Lucida Console", monospace;
  }

  /**
   * If the user prefers dark mode, set the colors to match the
   * dark mode palette. */
  @media (prefers-color-scheme: dark) {
    html {
      --backgroundColor: #2a363b;
      --backgroundAccentColor: #3c525c;
      --secondaryBackgroundColor: #faf9f9;
      --titleTextColor: #faf9f9;
      --subtitleTextColor: #dcdbd9;
      --textColor: #dcdbd9;
      --accent1Color: #fbd136;
      --accent2Color: #d85d44;
      --accent3Color: #3a89c9;
      --accent4Color: #9665c7;
      --illustrationsColor: #dcdbd9;
    }
  }
</style>
