---
import type { CollectionEntry } from "astro:content";

// eslint-disable-next-line @typescript-eslint/no-unused-vars
type Props = CollectionEntry<"recipes">["data"];

const {
  title,
  description,
  publishDate,
  recipeIngredients,
  recipeInstructions,
} = Astro.props;
---

<!-- actual-recipe id is what the 'jump to recipe' button uses -->
<div id="actual-recipe" class="recipe">
  <div>
    <h1>
      Recipe: <span>{title}</span>
    </h1>
    <p class="description">{description}</p>
    <p class="publish-date">Published: {publishDate}</p>
  </div>
  <hr />
  <h2>Ingredients</h2>
  <ul>
    {recipeIngredients.map((ingredient) => <li>{ingredient}</li>)}
  </ul>
  <h2>Instructions</h2>
  <ul>
    {recipeInstructions.map((instruction) => <li>{instruction}</li>)}
  </ul>
</div>
<style>
  .recipe {
    margin: 3rem 0rem;
    display: flex;
    flex-flow: column nowrap;
    border: 1px solid var(--accent1Color);
    border-radius: 0.5rem;
    padding: 2rem;
    font-size: 1.25rem;
  }

  p {
    margin-top: 1rem;
  }

  span {
    color: var(--accent2Color);
  }

  .description {
    font-style: italic;
  }

  .publish-date {
    margin-top: 0.5rem;
    color: var(--accent1Color);
    font-size: 1rem;
  }

  ul {
    list-style-type: disc;
    list-style-position: outside;
    margin-top: 0rem;
    padding: 1rem 1rem 1rem 2rem;
  }

  li {
    margin: 0.25rem 0rem;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    font-family: var(--heroFonts);
    color: var(--subtitleTextColor);
    font-size: 1.5rem;
    margin-top: 0rem;
    &:not(:nth-of-type(1)) {
      margin-top: 1rem;
    }
  }
</style>
