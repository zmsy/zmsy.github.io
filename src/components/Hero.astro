---
/**
 * Full width hero text.
 */
export interface Props {
  /** Main hero text. */
  title: string;
  /** Subtitle text below the main hero text. */
  subtitle?: string;
  /**
   * Publish date, if this is datestamped content. Passing this prop will make
   * this render a "Written by _____" <p> tag.
   */
  publishDate?: Date;
  /** Optional text alignment, defaults to center. */
  titleTextAlign?: "center" | "left";
  /**
   * View transition name.
   * https://docs.astro.build/en/guides/view-transitions/#transition-directives
   */
  transitionName?: string;
}

import diamondsSvg from "@src/svg/diamonds.svg?raw";
import { contactInfo } from "../consts";
import { Figure } from "./app/Figure";

const { title, subtitle, publishDate, titleTextAlign, transitionName } =
  Astro.props;

const h1Properties = {
  "class:list": ["title", { left: titleTextAlign === "left" }],
  ...(transitionName !== undefined && { "transition:name": transitionName }),
};
---

<div class="hero-body">
  <div class="container">
    <h1 {...h1Properties}>
      {title}
    </h1>
    {subtitle !== undefined && <h2 class="subtitle">{subtitle}</h2>}
    {
      publishDate && (
        <p class="meta">
          written by
          <a href={contactInfo.twitterUrl}>{contactInfo.authorName}</a>
          on {publishDate.toLocaleDateString()}
        </p>
      )
    }
    <Figure svg={diamondsSvg} className={"hero-diamonds"} />
  </div>
</div>
<style lang="scss">
  @use "bulma/sass/utilities/mixins.sass" as mixins;
  .hero-body {
    padding: 0rem;
    margin: 2rem 0rem;
    text-align: center;

    div {
      text-align: center;
    }

    .container {
      @include mixins.tablet {
        h1 {
          font-size: 3rem;
          line-height: 1.125;
        }

        h2 {
          font-size: 1.5rem;
        }
      }

      @include mixins.mobile {
        h1 {
          font-size: 2.25rem;
          line-height: 1.125;
        }

        h2 {
          font-size: 1.25rem;
          line-height: 1;
        }
      }
    }
  }

  .title {
    font-family: var(--heroFonts);
    font-weight: normal;
    font-size: 3.5rem;
    color: var(--titleTextColor);

    & + .subtitle {
      // override default bulma spacing
      margin-top: 0rem;
    }
  }

  .subtitle {
    font-family: var(--heroSubtitleFonts);
    font-weight: normal;
    font-size: 1.5rem;
    color: var(--titleTextColor);
  }

  .left {
    text-align: left;
  }

  h1 {
    transition: 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
  }
</style>
