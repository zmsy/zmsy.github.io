---
import { sortPublishDateDesc } from "@src/lib/sort";
import type { GetStaticPaths, Page } from "astro";
import { CollectionEntry, getCollection } from "astro:content";
import BlogPreview from "../../components/BlogPreview.astro";
import Footer from "../../components/Footer.astro";
import Navigation from "../../components/Navigation.astro";
import Pagination from "../../components/Pagination.astro";
import BaseHead from "../../components/head/BaseHead.astro";

// eslint-disable-next-line @typescript-eslint/no-unused-vars
type Props = { page: Page<CollectionEntry<"blog">> };

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const posts = (await getCollection("blog")).sort(sortPublishDateDesc);
  return paginate(posts, { pageSize: 5 });
};

const { page } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={"blog"} description={"Writings I've written."} />
    <style lang="scss">
      @use "../../../node_modules/bulma/sass/utilities/mixins.sass" as mixins;
      section {
        max-width: var(--blogPreviewWidth);
        margin: 3rem auto 8rem;
      }

      @include mixins.mobile {
        section {
          margin: 3rem 2rem 8rem;
        }
      }
    </style>
  </head>
  <body>
    <Navigation />
    <main>
      <section>
        <div>
          {
            page.data.map((post) => {
              return (
                <BlogPreview
                  description={post.data.description}
                  publishDate={post.data.publishDate}
                  title={post.data.title}
                  slug={post.slug}
                />
              );
            })
          }
        </div>
        <Pagination page={page} />
      </section>
    </main>
    <Footer />
  </body>
</html>
