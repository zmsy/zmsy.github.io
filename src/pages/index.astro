---
import Footer from "../components/Footer.astro";
import BaseHead from "../components/head/BaseHead.astro";
import type { SvgFile } from "../components/InlineSvg.astro";
import InlineSvg from "../components/InlineSvg.astro";
import Navigation from "../components/Navigation.astro";

const title = "Home";
const description = "Zach Morrissey, Software Engineer. Seattle, WA.";

const sections: Array<{
  name: string;
  href: string;
  tagline: string;
  svg: SvgFile;
}> = [
  {
    name: "Blog",
    href: "/blog",
    tagline:
      "A collection of writings on technology, programming, data analysis, visualization, and other topics.",
    svg: "/src/svg/blog-logo.svg",
  },
  {
    name: "Recipes",
    href: "/recipes",
    tagline:
      "I write recipes! Check out some delicious food, drink, and dessert that I've crafted over the years.",
    svg: "/src/svg/recipes-logo.svg",
  },
  {
    name: "About Me",
    href: "/about",
    tagline:
      "Learn more about me: Where I've come from, where I'm headed, and what I'll be doing along the way there.",
    svg: "/src/svg/about-logo.svg",
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style lang="scss">
      section:where(.hero) {
        margin: 2.5rem auto 1.5rem;
      }
      .home-columns {
        justify-content: center;
        margin-top: 1rem;

        .column {
          text-align: center;
        }

        h2 {
          font-family: var(--subtitleFonts);
          font-size: 2rem;
        }

        i {
          font-size: 2.5rem;
        }

        p {
          margin-bottom: 2rem;
          margin-top: 2rem;
          margin-left: 1rem;
          margin-right: 1rem;
          padding: 1rem;
          font-size: 1.125rem;
        }

        .column-logo {
          height: 100px;
          width: 100px;
          margin: auto;
        }

        .home-title {
          margin-bottom: 1rem;
        }

        .home-link {
          cursor: pointer;
          text-decoration: none;
          display: block;

          h2 {
            color: var(--accent2Color);
          }
        }
      }
    </style>
  </head>
  <body>
    <Navigation />

    <main>
      <section class="hero">
        <div class="container">
          <div class="is-hidden-tablet">
            <InlineSvg
              file={"/src/svg/home-logo-scribble-mobile.svg"}
              className="hero-badge-mobile"
            />
          </div>
          <div class="is-hidden-mobile">
            <InlineSvg
              file={"/src/svg/home-logo-scribble.svg"}
              className="hero-badge"
            />
          </div>
        </div>
      </section>
      <section>
        <div class="columns home-columns">
          {
            sections.map(({ href, svg, name, tagline }) => {
              return (
                <div class="column is-3-desktop is-4-tablet-only">
                  <a href={href} class="home-link">
                    <InlineSvg file={svg} className="column-logo" />
                    <InlineSvg
                      file={"/src/svg/diamonds-dark.svg"}
                      className="hero-diamonds"
                    />
                    <h2 class="home-title">{name}</h2>
                  </a>
                  <p>{tagline}</p>
                </div>
              );
            })
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
