---
import Admonition from "@src/components/mdx/Admonition.astro";
import Footer from "../../components/Footer.astro";
import BaseHead from "../../components/head/BaseHead.astro";
import Hero from "../../components/Hero.astro";
import Navigation from "../../components/Navigation.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={"recipes"}
      description={"Hand-crafted recipes for cocktails, lunches, dinners, desserts, and more."}
    />
    <style lang="scss">
      section {
        max-width: var(--blogPostWidth);
        margin: 3.75rem auto 8rem;
      }
    </style>
  </head>
  <body>
    <Navigation />
    <main>
      <section>
        <Hero
          title="Recipes"
          subtitle="Hand-crafted recipes for cocktails, lunches, dinners, desserts, and more."
        />
        <div>
          <Admonition
            level="info"
            text="This page will eventually hold places where you can view all of the recipes that I've created. Still a work in progress. Check back soon!"
          />
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
