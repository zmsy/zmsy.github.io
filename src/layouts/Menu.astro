---
/**
 * Layout for the drinks menu.
 */
import { Figure } from "@src/components/app/Figure";
import drinksSvg from "@src/svg/drinks.svg?raw";
import type { MarkdownLayoutProps } from "astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Navigation from "../components/Navigation.astro";
import BaseHead from "../components/head/BaseHead.astro";
import MarkdownContent from "../components/mdx/MarkdownContent.astro";

// eslint-disable-next-line @typescript-eslint/no-unused-vars
type Props = MarkdownLayoutProps<{
  /** Page title. */
  title: string;
  /** Page description, rendered as a subtitle. */
  description: string;
}>;

const {
  frontmatter: { title, description },
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style lang="scss">
      @use "bulma/sass/utilities/mixins" as mixins;
      article {
        margin: 0 auto 8rem;
        max-width: var(--menuWidth);

        @include mixins.mobile {
          // no max-width on touch
          max-width: unset;
          margin: 0 2rem 8rem;
        }

        .menu-drinks-logo {
          height: 12rem;
          margin: 3rem auto 1rem;
        }
      }
    </style>
  </head>
  <body>
    <Navigation />
    <main>
      <article>
        <Hero title={title} />
        <Figure svg={drinksSvg} className={"menu-drinks-logo"} />
        <MarkdownContent>
          <slot />
        </MarkdownContent>
      </article>
    </main>
    <Footer />
  </body>
</html>
